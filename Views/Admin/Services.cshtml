@model List<Laundry.Models.Services>
@{
    int i = 1;
}
<h1>Customers</h1>
<h1 class="mt-4">Services</h1>
<a asp-controller="Admin" asp-action="AddServices" class="btn btn-success">Add Service</a>
<table class="table-bordered table-hovered table-striped table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody id="customers">
        @foreach (var services in Model)
        {
            <tr>
                <td>@i</td>
                <td>@services.Name</td>
                <td>@services.Price</td>
                <td><img src="~/services/@services.Image" height="100" /></td>
            </tr>
            i++;
        }
    </tbody>
</table>

<script>
    @if (TempData["success"] != null)
    {
        <text>toastr.success('@TempData["success"]');</text>
    }
</script>